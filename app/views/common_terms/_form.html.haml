= form_for @common_term do |f|
  - if @common_term.errors.any?
    #error_explanation
      %h2= "#{pluralize(@common_term.errors.count, "error")} prohibited this common_term from being saved:"
      %ul
        - @common_term.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :search_term
    = f.text_field :search_term
  .field
    = f.label :pages
    = f.text_field :pages
  .actions
    = f.submit 'Save'
